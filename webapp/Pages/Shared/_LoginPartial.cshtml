@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form method="post">
            <a asp-page="/Account/Logout" class="btn btn-primary">Logout</a>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-success mx-3" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
